<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">10dp</item>
    </style>



    <style name="TextLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cor1</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="TextBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="TextGray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cor3</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="ButtonGrade">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/border</item>

    </style>


</resources>
